<%= form_with model: @event, local: true do |form| %>
  <% if @event.errors.any? %>
    <p><b>
      <%= pluralize(@event.errors.count, "error") %> prohibited
      this event from being saved:
    </b></p>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <!--EVENT TITLE-->
    <i>title</i>
    <%= form.label :title %><br>
    <%= form.text_field :title %>

    <!--DESCRIPTION-->
    <i>description</i>
    <%= form.label :description %><br>
    
      <%= form.text_area :description, :class => 'right'%>

<!--CAPACITY-->
    <i>people</i>
    <%= form.label :capacity %><br>
    <%= form.text_field :capacity %>
<!--LOCATION-->
    <i>location_on</i>
    <% form.label :location %><br>
    <%= form.text_field :location %>
<!--DATE-->
    <i>access_time</i>
    <% form.label :date %><br>
    <%= form.datetime_field :date, {ampm: true} %>
  <%= form.submit 'Submit' %>
  <%= link_to 'Back', events_path %>
<% end %>
